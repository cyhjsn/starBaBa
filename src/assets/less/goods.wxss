.goods {
  background-color: #fff;
  box-sizing: border-box;
  padding: 10px;
  position: relative;
  margin-bottom: 10px;
}
.goods .goods-info {
  margin-top: 10px;
}
.goods .goods-name {
  font-size: 14px;
  color: #666;
}
.goods .goods-enname {
  font-size: 12px;
  color: #999;
}
.goods .goods-price {
  font-size: 14px;
  margin-top: 5px;
  display: flex;
}
.goods .price {
  color: #0C34BA;
  font-weight: bold;
}
.goods .delete-icon {
  margin-left: auto;
}
