.home /deep/ .van-search {
  padding: 0px;
  width: 280px;
}
.home .app_name {
  color: #106e33;
  font-weight: bold;
  font-size: 16px;
}
.home .home-logo {
  width: 35px;
  height: 35px;
  padding-left: 5px;
}
.home /deep/ .van-nav-bar .van-icon {
  color: #106e33;
}
.home .indicator-box {
  position: absolute;
  right: 10px;
  bottom: 30px;
  display: flex;
}
.home .indicator-item {
  height: 2px;
  width: 10px;
  background-color: #fff;
  margin: 0 3px;
  transition: all 0.3s linear;
}
.home .indicator-item.active {
  background-color: #106e33;
  width: 16px;
}
.home .login-state {
  background-color: #fff;
  position: relative;
  top: -20px;
  margin: 0 10px;
  padding: 10px;
  height: 30px;
  line-height: 30px;
  border-radius: 10px;
  font-size: 16px;
}
.home .noLogin {
  display: flex;
}
.home .haveLogin {
  display: flex;
}
.home .haveLogin-left {
  width: 45px;
  height: 45px;
  border-radius: 50%;
  margin-top: -7px;
  overflow: hidden;
  margin-left: 30px;
}
.home .haveLogin-right {
  margin-left: 50px;
}
.home .user-name {
  color: #106e33;
  font-weight: bold;
}
.home .lgst-left {
  color: #106e33;
  padding-left: 10px;
}
.home .lgst-right {
  margin-left: 80px;
  line-height: 0;
}
.home /deep/ .van-button {
  width: 80px;
  height: 30px;
  padding: 0;
  font-size: 14px;
}
.home .product-box {
  margin-top: 15px;
  padding: 10px 10px 50px;
}
.home .line {
  border-top: 1px solid #e8e8e8;
  text-align: center;
}
.home .line > span {
  position: relative;
  top: -11px;
  padding: 0 10px;
  background-color: #F7F7F7;
  font-size: 16px;
  color: #106e33;
}
.home .product-items {
  margin-top: 10px;
  display: flex;
  flex-wrap: wrap;
}
.home .product-item {
  width: calc(50% - 5px);
  margin-right: 10px;
}
.home .product-item:nth-child(2n) {
  margin-right: 0;
}
.home .hot-box {
  position: absolute;
  left: 20px;
  top: 10px;
  width: 24px;
  height: 24px;
  background-color: #106e33;
  text-align: center;
  font-size: 12px;
  color: #fff;
  line-height: 24px;
  border-bottom-left-radius: 4px;
  border-bottom-right-radius: 4px;
}
