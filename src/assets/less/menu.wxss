.menu .search {
  padding: 10px;
  background-color: #106e33;
}
.menu /deep/ .van-search {
  padding: 0;
  border-radius: 17px;
  overflow: hidden;
}
.menu /deep/ .van-icon {
  color: #106e33;
}
.menu .classification {
  display: flex;
}
.menu .cf-item {
  flex: 1;
  height: 70px;
  position: relative;
  background-color: #FBFAFA;
}
.menu .cf-item-box {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}
.menu .item-icon {
  width: 34px;
  height: 34px;
}
.menu .item-text {
  font-size: 12px;
  font-weight: bold;
  text-align: center;
}
.menu .item-text.active {
  color: #106e33;
}
.menu .menu-product {
  padding: 10px;
}
.menu .product-items {
  margin-top: 10px;
  display: flex;
  flex-wrap: wrap;
  padding-bottom: 50px;
}
.menu .product-item {
  width: calc(50% - 5px);
  margin-right: 10px;
}
.menu .product-item:nth-child(2n) {
  margin-right: 0;
}
