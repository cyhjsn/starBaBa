.order-item {
  display: flex;
  margin-bottom: 10px;
}
.order-item:last-child {
  margin-bottom: 0;
}
.order-item .pro-img {
  width: 60px;
  margin-right: 10px;
}
.order-item .auto-img {
  width: 100%;
  display: block;
}
.order-item .pro-info {
  width: calc(100% - 70px);
}
.order-item .pro-top {
  height: 40px;
}
.order-item .pro-bottom {
  height: 20px;
  display: flex;
}
.order-item .pro-name {
  display: flex;
}
.order-item .p-name {
  font-size: 14px;
  color: #666;
  margin-right: 10px;
}
.order-item .p-rule,
.order-item .p-enname {
  font-size: 12px;
  color: #999;
}
.order-item .p-rule {
  line-height: 22px;
}
.order-item .p-price {
  font-size: 14px;
  color: #106e33;
  font-weight: bold;
  margin-right: auto;
  line-height: 20px;
}
.order-item .p-count {
  font-size: 14px;
  color: #999;
  line-height: 20px;
}
